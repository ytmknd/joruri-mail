<table id="webmailContainer"><tr>
<% unless controller.new_window? %>
<td id="webmailMenu"><div id="webmailMenuContainer">

<div class="menu">
  <%= link_to 'メールの受信', gw_webmail_mails_path(@mailbox.name), class: 'index', title: 'メールの受信' %>
