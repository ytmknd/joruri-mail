<!DOCTYPE html>
<html lang="ja">
<head>
<meta charset="UTF-8" />
<%= csrf_meta_tag %>
<title><%= Core.title %></title>
<%= javascript_include_tag :application %>
<%= stylesheet_link_tag :application, media: 'all' %>
<%= stylesheet_link_tag '/_common/themes/admin/style', media: 'all' %>
</head>
<body>

<div id="container">

<div id="header">
<div id="headerContainer">

  <h1><a href="/_admin/sys">Joruri</a></h1>
  <div class="menu">
    <span class="user"><%= Core.user_group.full_name if Core.user_group %>　<%= Core.user.name_with_account if Core.user %></span>
    <a class="logout" href="/_admin/logout">ログアウト</a>
  </div>

<!-- /#headerContainer --></div>
<!-- /#header --></div>

<div id="banner">
<div id="bannerContainer">

<!-- /#bannerContainer --></div>
<!-- /#banner --></div>

<div id="navi">
<div id="naviContainer">

  <table><tr><td class="menu">
    <%= render controller.controller_path + '/header' %></td>
  </tr></table>

<!-- /#navigationContainer --></div>
<!-- /#navigation --></div>

<div id="main">

<div id="content">
<div id="contentContainer">

<div id="contentHeader"><% dir = "#{Rails.root}/app/views/#{controller.controller_path}" %>
  <% if FileTest.exist?("#{dir}/_menu.html.erb") %>
  <%= render controller.controller_path + '/menu' %>
  <% end %>
</div>

<div id="contentBody">
<% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
<%= yield  %>
</div>

<div id="contentFooter"></div>

<!-- /#contentContainer --></div>
<!-- /#content --></div>

<div id="menu">
<div id="menuContainer">


<!-- /#menuContainer --></div>
<!-- /#menu --></div>

<!-- /#main --></div>

<div id="footer">
<div id="footerContainer">

<%#= :footer %>

<!-- /#footerContainer --></div>
<!-- /#footer --></div>

<!-- /#container --></div>

</body>
</html>
